    "eslint": ">=6.2.2",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-standard": ">=4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "tape": "^4.8.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^2.3.0",
    "vrsource-tslint-rules": "^5.1.0"
  },
  "homepage": "https://github.com/piratuks/code-style-config",
  "keywords": [
    "eslint rules",
    "tslint rules"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "codelyzer": "^5.2.2",
    "tslint": "^5.4.3",
    "prettier": "^2.0.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^2.3.0",
    "vrsource-tslint-rules": "^5.1.0",
    "eslint": ">=6.2.2",
    "eslint-plugin-prefer-arrow": "^1.2.0",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-standard": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/piratuks/code-style-config.git"
  },
  "scripts": {
    "lint": "eslint . --config=eslintrc.json",
    "test": "npm run lint && tape test/*.js",
    "precommit": "eslint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged&&lint-staged&&npm run lint -- --fix"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix --project .",
      "git add"
    ]
  },
  "dependencies": {}
}
